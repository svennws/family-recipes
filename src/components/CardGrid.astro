---
const hasChildren = Astro.slots.has('default');
---

{hasChildren && (
	<ul class="card-grid">
		<slot />
	</ul>
)}

<style>
	.card-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		list-style: none;
		margin: 0;
		padding: 0;
		justify-content: center;
	}

	:global(.card-grid__item) {
		width: 300px;
		min-height: 120px;
		background: rgb(var(--white));
		border-radius: 12px;
		border: 1px solid rgba(var(--black), 0.08);
		box-shadow: 0 12px 30px rgba(var(--black), 0.08);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.card-grid__link) {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		padding: 0.75rem;
		text-decoration: none;
		color: inherit;
		transition: color 0.2s ease;
	}

	:global(.card-grid__title) {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1.2;
		font-size: 1.563rem;
		text-align: center;
	}

	:global(.card-grid__meta) {
		margin: 0.75rem 0 0;
		color: rgb(var(--gray));
		text-align: center;
	}

	:global(.card-grid__item:hover) {
		transform: translateY(-6px);
		box-shadow: 0 18px 36px rgba(var(--black), 0.12);
	}

	:global(.card-grid__link:hover .card-grid__title),
	:global(.card-grid__link:hover .card-grid__meta) {
		color: rgb(var(--accent));
	}

	@media (max-width: 720px) {
		.card-grid {
			gap: 1rem;
		}

		:global(.card-grid__item) {
			width: 100%;
			max-width: 320px;
		}
	}
</style>
