---
interface CategoryItem {
	label: string;
	href: string;
	count?: number;
	title?: string;
}

const { categories } = Astro.props as { categories: CategoryItem[] };
---

{categories.length > 0 && (
	<>
		<ul class="category-grid">
			{categories.map((category) => (
				<li>
					<a href={category.href} title={category.title ?? category.label}>
						<h4 class="title">{category.label}</h4>
						{category.count !== undefined && (
							<p class="description">
								{category.count}{' '}
								{category.count === 1 ? 'oppskrift' : 'oppskrifter'}
							</p>
						)}
					</a>
				</li>
			))}
		</ul>
	</>
)}

<style>
	.category-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
		justify-content: center;
	}

	.category-grid li {
		width: 300px;
		height: 120px;
		background: rgb(var(--white));
		border-radius: 12px;
		border: 1px solid rgba(var(--black), 0.08);
		box-shadow: 0 12px 30px rgba(var(--black), 0.08);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.category-grid li a {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		padding: 0.5rem;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1.2;
		font-size: 1.563rem;
		text-align: center;
	}

	.description {
		margin: 0.75rem 0 0;
		color: rgb(var(--gray));
		text-align: center;
	}

	.category-grid li:hover {
		transform: translateY(-6px);
		box-shadow: 0 18px 36px rgba(var(--black), 0.12);
	}

	.category-grid li a:hover .title,
	.category-grid li a:hover .description {
		color: rgb(var(--accent));
	}

	@media (max-width: 720px) {
		.category-grid {
			gap: 1rem;
		}

		.category-grid li {
			width: 100%;
			max-width: 320px;
		}
	}
</style>
