---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2>
            <a href="/">
                <img src="/logo.svg" alt={`${SITE_TITLE} logo`} class="site-logo" />
                {SITE_TITLE}
            </a>
        </h2>
		<div class="internal-links">
			<HeaderLink href="/">Forsiden</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: relative;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
	.internal-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		flex-wrap: wrap;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
    .site-logo {
        width: 64px;
        height: 64px;
    }
	h2 {
		margin: 0;
		font-size: 1em;
		position: absolute;
		left: 1em;
		top: 50%;
		transform: translateY(-50%);
	}
	h2 a,
	h2 a.active {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: inherit;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	@media (max-width: 640px) {
		nav {
			flex-direction: column;
			align-items: center;
			justify-content: center;
			padding: 0.5rem 0;
		}
		h2 {
			position: static;
			transform: none;
			margin: 0 0 0.5rem;
		}
		.internal-links {
			width: 100%;
			justify-content: center;
			gap: 1rem;
		}
		nav a {
			padding: 0.75em 0.5em;
		}
	}
</style>
