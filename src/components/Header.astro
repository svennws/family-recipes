---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Forsiden</HeaderLink>
		</div>
</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: relative;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
	}
	.internal-links {
		display: flex;
		gap: 1.5rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	h2 {
		margin: 0;
		font-size: 1em;
		position: absolute;
		left: 1em;
		top: 50%;
		transform: translateY(-50%);
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
</style>
