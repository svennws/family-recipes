---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

import { getCollection } from 'astro:content';
import type { RecipeData } from '../content/config';

const recipes: RecipeData[] = (await getCollection('recipes'))
    .map((entry) => entry.data)
    .sort((a, b) => a.title.localeCompare(b.title));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			h1 {
				text-align: center;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				justify-content: center;
			}
			ul li {
				width: 300px;
				height: 120px;
				background: rgb(var(--white));
				border-radius: 12px;
				border: 1px solid rgba(var(--black), 0.08);
				box-shadow: 0 12px 30px rgba(var(--black), 0.08);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}
			ul li a {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				height: 100%;
				padding: 0.5rem;
				text-decoration: none;
				transition: color 0.2s ease;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.2;
				font-size: 1.563rem;
				text-align: center;
			}
			.description {
				margin: 0.75rem 0 0;
				color: rgb(var(--gray));
				text-align: center;
			}
			ul li:hover {
				transform: translateY(-6px);
				box-shadow: 0 18px 36px rgba(var(--black), 0.12);
			}
			ul li a:hover .title,
			ul li a:hover .description {
				color: rgb(var(--accent));
			}
			@media (max-width: 720px) {
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
					max-width: 320px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>VÃ¥re oppskrifter</h1>
				<hr />
				<ul>
				{recipes.map((recipe) => (
					<li>
						<a href={`/recipes/${recipe.slug}`}>
							<h4 class="title">{recipe.title}</h4>
							<p class="description">{recipe.description}</p>
						</a>
					</li>
				))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
