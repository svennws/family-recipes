---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import CardGrid from '../components/CardGrid.astro';
import CategoryGrid from '../components/CategoryGrid.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

import { getCollection } from 'astro:content';
import type { RecipeData } from '../content/config';
import { buildCategoryIndex, getChildCategories } from '../utils/categories';

type RecipeListItem = RecipeData & { slug: string };

const recipeEntries = await getCollection('recipes');

const recipes: RecipeListItem[] = recipeEntries
    .map((entry) => ({
        slug: entry.id.split('/').pop() ?? entry.id,
        ...entry.data
    }))
    .sort((a, b) => a.title.localeCompare(b.title));

const categoryIndex = buildCategoryIndex(recipeEntries);
const topLevelCategories = getChildCategories(categoryIndex, '').map((category) => ({
    label: category.label,
    href: `/categories/${category.segments.join('/')}`,
    count: category.count,
    title: category.title
}));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			h1 {
				text-align: center;
				margin: 0.5em;
			}
			hr {
				margin: 1.5em;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Kategorier</h1>
				<CategoryGrid categories={topLevelCategories} />
			</section>
			<hr />
			<section>
				<h1>Alle oppskrifter</h1>
				<CardGrid>
					{recipes.map((recipe) => (
						<li class="card-grid__item">
							<a class="card-grid__link" href={`/recipes/${recipe.slug}`}>
								<h4 class="card-grid__title">{recipe.title}</h4>
								<p class="card-grid__meta">{recipe.description}</p>
							</a>
						</li>
					))}
				</CardGrid>
			</section>
		</main>
		<Footer />
	</body>
</html>
